<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<GeneDef ParentName="CellInstabilityBase">
		<defName>AG_Instability_Lethal</defName>
		<label>lethal cell instability</label>
		<description>Carriers of this gene need considerably less metabolic energy to stay alive, at the cost of outrageously-reduced stability in their cell-replication machinery, and a very, VERY limited lifespan that can't be expanded in any way.</description>
		<iconPath>UI/Icons/Genes/AG_LethalInstability</iconPath>
		<displayOrderInCategory>135</displayOrderInCategory>
		<biostatMet>7</biostatMet>
		<customEffectDescriptions>
			<li>Carrier will die in three natural years.</li>
		</customEffectDescriptions>
		<geneClass>VanillaGenesExpanded.Gene_AddsHediff</geneClass>
		<selectionWeight>0</selectionWeight>
		<statFactors>			
			<CancerRate>7</CancerRate>
			<ImmunityGainSpeed>0.85</ImmunityGainSpeed>
		</statFactors>
		<modExtensions>
			<li Class="VanillaGenesExpanded.GeneExtension">
				<backgroundPathEndogenes>UI/Icons/Genes/AG_Endogenes</backgroundPathEndogenes>
				<backgroundPathXenogenes>UI/Icons/Genes/AG_Xenogenes</backgroundPathXenogenes>
				<hediffToWholeBody>AG_LethalInstability</hediffToWholeBody>
			</li>
		</modExtensions>
	</GeneDef>
</Defs>