<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef>
		<defName>AG_GeneRemovalComa</defName>
		<label>gene tampering coma</label>
		<description>The genes of this person were artificailly tampered with. This is greatly taxing on the organism and it will put them into a coma for 3 days.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>0.001</initialSeverity>
		<defaultLabelColor>(0.9, 1.0, 0.35)</defaultLabelColor>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>180000</disappearsAfterTicks>
				<!-- 3 days. -->
				<showRemainingTime>true</showRemainingTime>
				<canUseDecimalsShortForm>true</canUseDecimalsShortForm>
			</li>
		</comps>
	</HediffDef>
	<HediffDef>
		<defName>AG_XenogerminationComa</defName>
		<label>forceful implantation coma</label>
		<description>A xenogerm was implanted in this person by force. This will keep them in a coma for 4 days.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<initialSeverity>0.001</initialSeverity>
		<defaultLabelColor>(0.9, 1.0, 0.35)</defaultLabelColor>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>240000</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
				<canUseDecimalsShortForm>true</canUseDecimalsShortForm>
			</li>
		</comps>
	</HediffDef>
	<HediffDef>
		<defName>AG_UnstableMind</defName>
		<label>unstable mind</label>
		<description>Mental instability that makes this person prone to mental breaks, and greatly increases their psychic sensitivity.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<initialSeverity>0.01</initialSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>7500</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
				<canUseDecimalsShortForm>true</canUseDecimalsShortForm>
			</li>
		</comps>
		<stages>
			
			<li>
				<mentalBreakMtbDays>0.3</mentalBreakMtbDays>
				<statOffsets>
					<PsychicSensitivity>0.75</PsychicSensitivity>
					
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
</Defs>