<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThoughtDef>
		<defName>AG_Disgust</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Kind</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>disgusting colonist</label>
				<description>I can't get it out of my mind. How can anyone be SO revolting and grotesque?</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
		<nullifyingGenes>
			<li>AG_Beauty_VeryVeryUgly</li>
		</nullifyingGenes>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_Awe</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>angelic colonist</label>
				<description>I can't get it out of my mind. How can anyone be SO beautiful?</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_PsychicDrone</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>psychic drone</label>
				<description>I feel calm and at peace</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
		<nullifyingGenes>
			<li>AG_PsychicAbility_Masterful</li>
		</nullifyingGenes>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_CorpseFeeding</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>smell of corpse-rotting gas</label>
				<description>The smell of putrid corpse bile and corpse-rotting gas is overpowering!</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
		<nullifyingGenes>
			<li>AG_CorpseFeeding</li>
		</nullifyingGenes>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_SunlightSensitivity_Minor</defName>
		<workerClass>ThoughtWorker_InSunlight</workerClass>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<requiredGenes>
			<li>AG_UVSensitivity_Minor</li>
		</requiredGenes>
		<stages>
			<li>
				<label>sunlight sensitivity</label>
				<description>The sun hurts my eyes.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_Thalassophobia</defName>
		<workerClass>AlphaGenes.ThoughtWorker_Thalassophobia</workerClass>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>afraid of water</label>
				<description>I can't stand being near water! It terrifies me.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_PukedRats</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>puked rats</label>
				<description>No matter how many times it happens, I'll never get used to this.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_Implanted</defName>
		<thoughtClass>Thought_Memory</thoughtClass>
		<durationDays>10</durationDays>
		<nullifyingTraits>
			<li>Masochist</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>forcefully implanted by {0}</label>
				<description>I was violated and stung.</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_Implanted_Social</defName>
		<thoughtClass>Thought_MemorySocial</thoughtClass>
		<durationDays>60</durationDays>
		<stackLimit>50</stackLimit>
		<stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
		<nullifyingTraits>
			<li>Masochist</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>forcefully implanted</label>
				<baseOpinionOffset>-40</baseOpinionOffset>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_Parasite</defName>
		<thoughtClass>Thought_Memory</thoughtClass>
		<durationDays>60</durationDays>
		<stages>
			<li>
				<label>parasitized by {0}</label>
				<description>I CAN FEEL THE EGGS MOVING INSIDE MY BODY!</description>
				<baseMoodEffect>-40</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<ThoughtDef>
		<defName>AG_Parasite_Social</defName>
		<thoughtClass>Thought_MemorySocial</thoughtClass>
		<durationDays>60</durationDays>
		<stackLimit>50</stackLimit>
		<stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
		<stages>
			<li>
				<label>parasitized</label>
				<baseOpinionOffset>-100</baseOpinionOffset>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
