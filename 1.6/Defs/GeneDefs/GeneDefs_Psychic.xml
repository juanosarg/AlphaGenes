<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<GeneDef ParentName="GenePsychicAbilityBase">
		<defName>AG_PsychicAbility_Masterful</defName>
		<label>master psychic</label>
		<description>Carriers of this gene have extraordinary psychic abilities.</description>
		<iconPath>UI/Icons/Genes/AG_MasterfulPsychic</iconPath>
		<displayOrderInCategory>31</displayOrderInCategory>
		<statOffsets>
			<PsychicSensitivity>0.5</PsychicSensitivity>
			<MeditationFocusGain>0.3</MeditationFocusGain>
			<PsychicEntropyRecoveryRate>0.25</PsychicEntropyRecoveryRate>
		</statOffsets>
		<biostatCpx>3</biostatCpx>
		<biostatMet>-6</biostatMet>
		<selectionWeight>0</selectionWeight>
		<customEffectDescriptions>
			<li>Creates a constant psychic soothe that makes nearby colonists that don't have this same gene happy.</li>
		</customEffectDescriptions>
		<symbolPack>
			<prefixSymbols>
				<li>
					<symbol>animus</symbol>
					<weight>3</weight>
				</li>
				<li>
					<symbol>senso</symbol>
				</li>
				<li>
					<symbol>sensi</symbol>
				</li>
			</prefixSymbols>
		</symbolPack>
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<backgroundPathEndogenes>UI/Icons/Genes/AG_Endogenes</backgroundPathEndogenes>
				<backgroundPathXenogenes>UI/Icons/Genes/AG_Xenogenes</backgroundPathXenogenes>
				<hediffToWholeBody>AG_PsychicDrone</hediffToWholeBody>
			</li>
		</modExtensions>
	</GeneDef>
	<GeneDef>
		<defName>AG_PsychicRemapping</defName>
		<label>psychic remapping</label>
		<description>Carriers of this gene have altered brain pathways, getting inverted effects from psychic drones.</description>
		<iconPath>UI/Icons/Genes/AG_PsychicRemapping</iconPath>
		<displayCategory>Psychic</displayCategory>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-1</biostatMet>
		<selectionWeight>0</selectionWeight>
		<customEffectDescriptions>
			<li>Negative psychic drones will have positive mood effects, while positive psychic drones will have negative mood effects.</li>
		</customEffectDescriptions>
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">
				<backgroundPathEndogenes>UI/Icons/Genes/AG_Endogenes</backgroundPathEndogenes>
				<backgroundPathXenogenes>UI/Icons/Genes/AG_Xenogenes</backgroundPathXenogenes>
				
			</li>
		</modExtensions>
	</GeneDef>
</Defs>