	<HediffDef>
		<defName>AG_DevouredShooting</defName>
		<label>devoured brain: shooting</label>
		<description>Devoured a brain that was skilled in Shooting. Buff lasts for 2 days</description>
		<hediffClass>HediffWithComps</hediffClass>
		<scenarioCanAdd>false</scenarioCanAdd>
		
		<maxSeverity>1.0</maxSeverity>
		<initialSeverity>0.01</initialSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_DisappearsOnDeath"/>
			<li Class="HediffCompProperties_Disappears">
				<disappearsAfterTicks>120000</disappearsAfterTicks>
				<showRemainingTime>true</showRemainingTime>
				<canUseDecimalsShortForm>true</canUseDecimalsShortForm>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<ShootingAccuracyPawn>5</ShootingAccuracyPawn>
					<AimingDelayFactor>-0.25</AimingDelayFactor>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
